<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.romantic.dao.TbGoodsDescMapper" >
    <sql id="query_ByGoods_Id_Column_List" >
        id,goods_id,goods_title,goods_price,place_of_Area,category,taste,goods_min_type,brand,send_time_type,goods_image,small_pic,date_of_manufacture,quality_date,sweetness,material,alcoholic_strength,storage_method,capacity,create_time,update_time,is_alive
    </sql>
    <select id="queryByGoodsId" resultType="TbGoodsDesc" parameterType="String">
        SELECT
        <include refid="query_ByGoods_Id_Column_List"/>
        from tb_goods_desc
        where goods_id= #{goods_id}
    </select>
</mapper>
